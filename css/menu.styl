escarlata = #bd1d1e
gris_oscuro = #444

@import url(http://fonts.googleapis.com/css?family=Arimo:400,700);

/*Para que funcione nib: degradados*/
@import 'nib/vendor'
@import 'nib/gradients'



/*Prefijos propietarios*/
vendor-prefixes = o ms moz webkit 


	#contenedor
		margin 0 auto
		max-width 1000px

body
	background #EAE5E1
	
	/*   Contenido Pagina Menu */

	.contenido
		margin 0
		padding 0


	
		.post
			max-width 93%
			
			background rgba(227, 222, 217, 0.4)
			margin 1.3em auto
			padding 0
			box-shadow 1px 1px 5px rgba(68,68,68,0.2)
			border-radius 0.3em
			
			
			.imagen
				width 98.7%
				margin 0 
				padding 0
				
				img
					width 100%
					vertical-align top
					border 2px solid white
					box-shadow 0px 2px 5px rgba(68,68,68,0.2)
					border-radius 0.3em 0.3em 0 0
					
	.detalle
			margin 0.7em 0 0 0
			width 100%
			
			h2
				color escarlata
				font-family:"Times New Roman", Times, serif;
				font-size 23px
				margin 0
				padding 0 0.5em
						
			p
				
				color gris_oscuro
				font-family: 'Arimo', sans-serif;
				font-size 13px
				line-height 150%
				margin 0.8em 0
				text-align left	
				padding 0 0.3em

			.vinculo
				a
					color escarlata
					font-family: 'Arimo', sans-serif;
					font-size 12px
					margin  0 -5px
					padding 0.4em 0.6em 
					text-decoration none
					display block
					background-color rgba(221, 211, 202, 0.5)
					border-radius 0 0 0.3em 0.3em
					&:hover
						background-color red
						border-radius 0 0 0.3em 0.3em			
						box-shadow 0px 2px 5px rgba(68,68,68,0.4)
						color white
				
						text-shadow 1px 1px 2px #B4AFAD

						

/*   Responsive   */	
	

@media screen and (min-width: 480px)
	#contenedor

		.contenido
		
			.post
				max-width 100%
				margin 1em
				display block
			
				
	
		
				.imagen
					width 43%
					display inline-block
					float left
					margin-right 0.5em
					padding 0
					
					img
						width 100%
						border-radius 0.3em
						min-height 125px
						box-shadow 2px 2px 5px rgba(68,68,68,0.2)
						
						
						
				
				.detalle
		
					width 55%
					min-height 153px
				
					overflow hidden
					h2
						padding 0.2em 0.5em 0 0.5em
					p
						margin 0.7em 0 0.7em 0
						overflow hidden
						max-height 60px
						
					.vinculo
						a
							padding 0.4em 0.6em 
							
							&:hover
								border-radius 0.3em	
								

@media screen and (min-width: 767px)
			
	#contenedor
		
		.contenido
			margin 2.5em 1em 2em 1em
			
			.post
		
				margin 1em 0
			
				.imagen
					
					width 300px
				
				.detalle
					min-height 147px
					max-height 147px
					min-width 55%
					max-width 80%
					padding 0 0 0 1em
					p 
					
					.vinculo
						a
						
							position relative
							width 100%
							
					
			
